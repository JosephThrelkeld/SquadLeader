@namespace SquadLeader

<svg width="@SvgWidth" height="@SvgHeight" viewBox="-7 -8 740 643" xmlns="http://www.w3.org/2000/svg">
            <polygon points="@points" style="fill:lime;stroke:purple;stroke-width:1" />
            </svg>



@code {

    const double sideLength = 200; // 1/2 inch
    double halfHeight = sideLength * Math.Sqrt(3) / 2;

    private int SvgWidth => (int)(2 * sideLength);
    private int SvgHeight => (int)(2 * halfHeight);
    private string? points;

    protected override async Task  OnInitializedAsync()
    {
        var x_0 = sideLength / 2;
        var y_0 = sideLength / 2;

        var r = 70; //70 px radius 

        for (int i = 0; i < 6; i++)
        {
            var x = x_0 + r * (float)Math.Cos(i * 60 * Math.PI / 180f);
            var y = y_0 + r * (float)Math.Sin(i * 60 * Math.PI / 180f);
            points += $"{x},{y} ";
        }
    }
}
